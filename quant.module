/**
 * Intermediary shutdown function.
 *
 * This is an intermediary shutdown function to ensure that Quant's
 * export will always be run after other processes.
 */
function _quant_shutdown($entity_info) {
  drupal_register_shutdown_function('_quant_post_entity_op', $entity_info);
}

/**
 * Post entity operation hook.
 *
 * This should be registered as a shutdown function so that it
 * can operate after the db_transaction has finished.
 */
function _quant_post_entity_op($entity_info) {
  list($id) = entity_extract_ids($entity_info['type'], $entity_info['entity']);
  list($url, $context) = _quant_prepare_entity($entity_info['type'], $id);

  if (isset($entity_info['token'])) {
    $context['token'] = $entity_info['token'];
  }

  $context['id'] = $id;
  quant_seed($url, $context);
}

/**
 * Seed a url.
 *
 * @param string $url
 *   The url to seed.
 * @param array $context
 *   The context of the seed, usually includes entity info.
 */
function quant_seed($url, array $context = array()) {
  global $base_url;
  $base = quant_get_base_url();
  $path = parse_url($url, PHP_URL_PATH);
  $path = ltrim($path, '/');

  // Ensure URL is processed to account for special character encoding.
  $url = $context['url'] = _rebuild_url($url);

  // Skip based on log data.
  if (quant_log_skip_seed($url, $context)) {
    quant_log('Quant: Skipping !type !url based on logs. To force reseeding, disable the "Check logs before seeding" configuration option or truncate the {quant_log} database table.', array('!type' => $context['type'], '!url' => $url));
    return;
  }

  // Don't seed admin pages.
  if (path_is_admin($path)) {
    quant_log('Quant: Skipping admin page !path', array('!path' => $path));
    return;
  }

  quant_log('Quant: Sending !type !url', array('!type' => $context['type'], '!url' => $url));

  $quant_hostname = variable_get('quant_hostname');
  if (empty($quant_hostname)) {
    // @todo Should this be `$base`?
    $quant_hostname = parse_url($base_url, PHP_URL_HOST);
  }

  $options = array(
    'headers' => array(
      'Host' => $quant_hostname,
      'User-Agent' => 'Quant (+http://quantcdn.io)',
    ),
  );

  // Ensure Quant internal requests are signed.
  $options['headers']['quant-token'] = quant_token_create($url);

  if (isset($context['vid']) && $context['type'] == 'node') {
    $options['headers']['quant-revision'] = $context['vid'];
  }

  if (!variable_get('quant_verify_ssl', TRUE)) {
    $options['context'] = stream_context_create(array(
      'ssl' => array(
        'verify_peer' => FALSE,
        'verify_peer_name' => FALSE,
      )
    ));
  }

  // Set the internal request method.
  $options['method'] = variable_get('quant_seed_get', TRUE) ? 'GET' : 'POST';

  $response = drupal_http_request($url, $options);

  // Save data for logging.
  $context['status'] = $response->code;

  // Ensure file entities have their underlying asset seeded.
  if (isset($context['type']) && $context['type'] == 'file') {

    // Public file handler
    if(strpos($context['entity']->uri, "public://" ) === 0) {

      // Seed the underlying file to the web-accessible public files path.
      $file_on_disk = drupal_realpath($context['entity']->uri);

      // File exists in filesystem.
      if (!empty($file_on_disk)) {

        $public_path = $file_on_disk;
        if (substr($file_on_disk, 0, strlen(DRUPAL_ROOT)) == DRUPAL_ROOT) {
          $public_path = substr($file_on_disk, strlen(DRUPAL_ROOT));
        }

        // Create a redirect from file download uri location to public file path.
        if (module_exists('quant_redirect')) {
          $download_uri = file_entity_download_uri($context['entity']);
          $download_path = url($download_uri['path'], $download_uri['options']);

          // We purposefully exclude the token from file paths.
          $download_path = parse_url($download_path, PHP_URL_PATH);
          quant_redirect_request($download_path, $public_path, 301);
        }

        $fileCtx = array(
          'location' => $context['entity']->uri,
          'request' => $public_path,
          'type' => 'file',
          'url' => $context['entity']->uri,
        );

        quant_seed_file("{$base}{$public_path}", $fileCtx);
      }
    }
  }

  // Add a redirect if 301|302.
  if (isset($response->redirect_code) && ($response->redirect_code == 301 || $response->redirect_code == 302)) {
    // Strip Quant params from destination.
    $dest = $response->redirect_url;

    // Ensure relative for internal redirect.
    $dest = _rewrite_relative($dest);

    if (module_exists('quant_redirect')) {
      quant_redirect_request($path, $dest, (int) $response->redirect_code);
    }

    // Ensure internal redirects have their destination seeded.
    if (_is_url_internal($dest)) {

      $dest_path = parse_url($dest, PHP_URL_PATH);

      if (isset($context['type']) && $context['type'] == 'file') {
        // File asset already handled.
        quant_log_seed($context, 'File asset already handled.');
        return;
      }
      else {
        quant_seed("{$base}{$dest_path}", array());
      }
    }

    // Redirect created, internal redirect followed + seeded.
    quant_log_seed($context, 'Redirect created.');
    return;
  }

  if (($response->code == 404 || $response->code == 403) && strpos($url, '/_quant404') === FALSE) {
    // Ensure that the route is not accessible in Quant.
    quant_api_unpublish_route($url);
    quant_log_seed($context, 'Unpublish route in Quant.');
    return FALSE;
  }

  if (!property_exists($response, 'data') || $response->code > 404) {
    $error = format_string('Unable to seed %url %error %request', array(
      '%url' => $url,
      '%error' => $response->error,
      '%request' => json_encode($response),
    ));
    quant_log($error, NULL, WATCHDOG_ERROR);
    quant_log_seed($context, $error);
    return FALSE;
  }

  if ($response->code != 200) {
    $error = format_string('Non-200 response code for %url %status_code', array(
      '%url' => $url,
      '%status_code' => $response->code,
    ));
    quant_log($error, NULL, WATCHDOG_WARNING);
    quant_log_seed($context, $error);
    return FALSE;
  }

  $markup = $response->data;
  $queue = quant_get_queue();

  // Pagination support.
  $document = new \DOMDocument();
  @$document->loadHTML($markup);
  $xpath = new \DOMXPath($document);
  $xpath_urls = isset($context['xpath_urls']) ? $context['xpath_urls'] : [];

  $xpath_selectors = array();
  $links_config = variable_get(
    'quant_xpath_selectors',
    "//a[contains(@href,\"page=\") and contains(text(), \"next\")]\r\n//a[starts-with(@href, \"/\") and contains(text(), \"first\")]"
  );

  foreach (explode(PHP_EOL, $links_config) as $links_line) {
    $xpath_selectors[] = trim($links_line);
  }

  foreach ($xpath_selectors as $xpath_query) {
    foreach ($xpath->query($xpath_query) as $node) {
      $original_href = $new_href = $node->getAttribute('href');
      if ($original_href[0] === '?') {
        $new_href = strtok($path, '?') . $original_href;
      }

      $xpath_url = $base . $new_href;

      if (in_array($xpath_url, $xpath_urls)) {
        continue;
      }

      $xpath_urls[] = $xpath_url;
      $next_context = array(
        'find_pager' => TRUE,
        'type' => 'view', // @todo type='xpath'?
        'xpath_urls' => $xpath_urls,
      );
      $item = array('quant_seed', array($xpath_url, $next_context));
      $queue->createItem($item);
    }
  }

  // Rewrite absolute URLs if relevant.
  if (variable_get('quant_rewrite_relative', FALSE)) {
    $markup = _rewrite_relative($markup);
  }

  $alias = parse_url($url, PHP_URL_PATH);
  $alias = empty($alias) ? '/' : $alias;

  // Support query parameters (pagination).
  $query = parse_url($url, PHP_URL_QUERY);
  $alias = !empty($query) ? $alias . "?{$query}" : $alias;

  $meta = [
    'published' => TRUE,
    'transitions' => [],
    'info' => [],
  ];

  if (!empty($response->headers['content-type'])) {
    $meta['content_type'] = $response->headers['content-type'];
  }

  if (isset($context['type'])) {
    drupal_alter("quant_meta_{$context['type']}", $meta, $context);
  }

  drupal_alter('quant_meta', $meta, $context);
  $seed_results = module_invoke_all('quant_seed', $alias, $markup, $meta, $context);

  // Update the context and log.
  quant_log_check_seed_results($context, $seed_results);
  quant_log_seed($context);
}

/**
 * Prepare a file export.
 */
function quant_seed_file($url, $context = array()) {

  // Ensure we have an md5 value for the local file if it exists.
  if (isset($context['location']) && file_exists($context['location']) && empty($context['md5'])) {
    $context['md5'] = md5_file($context['location']);
  }

  // Skip based on log data.
  if (quant_log_skip_seed($url, $context)) {
    quant_log('Quant: Skipping file !url based on logs. To force reseeding, disable the "Check logs before seeding" configuration option or truncate the {quant_log} database table.', array('!type' => $context['type'], '!url' => $url));
    return;
  }

  // Data for logging.
  if (strpos($url, "http://") !== 0) {
    $context['url'] = quant_get_base_url() . $url;
  }

  quant_log('Quant: Sending file !url', array('!url' => urldecode($url)));

  // @TODO: Files need different meta?
  $meta = array();
  drupal_alter('quant_file_meta', $meta, $context);
  $seed_results = module_invoke_all('quant_seed_file', $url, $context);

  // Update the context and log.
  quant_log_check_seed_results($context, $seed_results);
  quant_log_seed($context);
}

/**
 * Drush or watchdog logging.
 */
function quant_log($message, $replacements = array(), $level = WATCHDOG_INFO) {
  $vvv = variable_get('quant_verbose_logging', FALSE);

  if (empty($replacements)) {
    // Prevent errors if $replacements is `null`.
    $replacements = array();
  }

  if ($level == QUANT_VERBOSE && !$vvv) {
    return;
  }

  if ($level == QUANT_VERBOSE) {
    $level = WATCHDOG_INFO;
  }

  if (drupal_is_cli()) {
    // phpcs:ignore
    drush_log(t($message, $replacements), 'ok');
    return;
  }

  watchdog('quant', $message, $replacements, $level);
}

/**
 * Log seed data to database.
 */
function quant_log_seed($context, $message = 'Successful.') {
  if (!isset($context['url'])) {
    quant_log('No URL provided for quant_log_seed.', [], WATCHDOG_ERROR);
    return;
  }

  $md5 = 0;

  if (isset($context['type']) && isset($context['location']) && file_exists($context['location'])) {
    switch ($context['type']) {
      case 'file':
      case 'file_attachment':
      case 'theme':
        $md5 = isset($context['md5']) ? $context['md5'] : md5_file($context['location']);
        break;
    }
  }

  $query = db_merge('quant_log')
    ->key(array('url' => $context['url']))
    ->fields(array(
      'entity_id' => isset($context['id']) ? $context['id'] : 0,
      'url' => $context['url'],
      'type' => isset($context['type']) ? $context['type'] : 'unknown',
      'status' => isset($context['status']) ? $context['status'] : 'unknown',
      'updated' => time(),
      'hash' => isset($context['hash']) ? $context['hash'] : 0, // @todo
      'md5' => $md5,
      'message' => isset($context['message']) ? $context['message'] : $message
    ));

  try {
    return (bool) $query->execute();
  }
  catch (\PDOException $error) {
    quant_log($error, [], WATCHDOG_ERROR);
    return FALSE;
  }
}

/**
 * Check seed results and adjust the context.
 */
function quant_log_check_seed_results(&$context, $seed_results) {

  $message = 'Successful.';
  // Any error should be logged, so get check for it.
  $has_error = FALSE;
  foreach ($seed_results as $seed_result) {
    if ($seed_result === FALSE) {
      // Get the last watchdog message.
      $has_error = TRUE;
      $watchdog_log = db_query('SELECT message, variables FROM {watchdog} ORDER BY wid DESC LIMIT 1')->fetchObject();
      $variables = unserialize($watchdog_log->variables);
      $message = strip_tags(format_string($watchdog_log->message, $variables));
      break;
    }
  }

  $context['message'] = $message;
  $context['status'] = isset($context['status']) ? $context['status'] : ($has_error ? 'Unknown' : '200');
}

/**
 * Check if seed item should skip based on log.
 */
function quant_log_skip_seed($url, $context) {
  // Only skip if configured for this option.
  if (!variable_get('quant_seed_check_log', FALSE)) {
    return FALSE;
  }

  if (empty($context['type'])) {
    return;
  }

  // Handle entities.
  if (isset($context['id'])) {
    $entities = entity_load($context['type'], [$context['id']]);
    if (empty($entities)) {
      // Something is wrong with the type or id.
      quant_log(t('Could not load entity %type (%id)', ['%type' => $context['type'], '%id' => $context['id']]));
      return TRUE;
    }
    $entity = reset($entities);
    $changed = isset($entity->changed) ? $entity->changed : (isset($entity->created) ? $entity->created : (isset($entity->timestamp) ? $entity->timestamp : 0));

    // Check the quant_log data for this entity.
    $logs = db_query('SELECT * FROM {quant_log} WHERE entity_id = :entity_id AND type = :type', array(':entity_id' => $context['id'], ':type' => $context['type']));
    foreach ($logs as $log) {
      // Reprocess if status or log message aren't as expected.
      if ($log->status != '200' || $log->message != 'Successful.') {
        return FALSE;
      }
      // Check the log date against the entity.
      if ($changed != 0 && $changed < $log->updated) {
        return TRUE;
      }
    }
  }

  switch ($context['type']) {
    case 'file':
    case 'file_attachment':
    case 'theme':
      // Check the log md5 against the context md5.
      if (isset($context['location']) && isset($context['md5'])) {
        $log_md5 = db_query('SELECT md5 FROM {quant_log} WHERE url like :url AND type = :type', array(
          ':url' => '%' . db_like($url),
          ':type' => $context['type'],
        ))->fetchField();
        if ($log_md5) {
          $file_md5 = md5_file($context['location']);
          return $file_md5 == $log_md5;
        }
      }
      break;
  }

  return FALSE;
}

/**
